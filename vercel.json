{
    "version": 2,
    "builds": [
        {
            "src": "client",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "npm run build",
                "outputDirectory": "dist"
            }
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/auth/register",
            "dest": "/api/auth/register.js"
        },
        {
            "src": "/api/auth/login",
            "dest": "/api/auth/login.js"
        },
        {
            "src": "/api/auth/user",
            "dest": "/api/auth/user.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        }
    ]
}